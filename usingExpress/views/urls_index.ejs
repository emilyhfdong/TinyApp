<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head.ejs %>
  </head>


  <body>
    <header>
      <% include ./partials/_header.ejs %>
    </header>

    <div class = "container">
      <table class = "table">
        <thead>
          <tr>
            <th>URL</th>
            <th>Shortened URL</th>
            <th>Date Created </th>
            <th>Times Visited </th>
          </tr>
        </thead>

        <tbody>
          <% for(let shortURL in urls) { %>
          <tr>
            <td> <%= urls[shortURL]["longURL"] %> </td>
            <td> <%= shortURL %> </td>
            <td> <%= urls[shortURL]["dateCreated"] %></td>
            <td> <%= urls[shortURL]["timesVisited"]%>
            <td>
              <a href = <%= "/urls/" + shortURL %> >Edit </a>
            </td>
            <td>
              <form method = "POST" action = <%="/urls/" + shortURL + "/delete" %>>
                <input type = "submit" value = "Delete" class = "btn btn-primary">
              </form>
            </td>

          </tr>
          <%}%>
          <tr>
            <td><a href = "/urls/new"> New URL!</a></td>
          </tr>
        </tbody>

      </table>
    </div>

  </body>
</html>